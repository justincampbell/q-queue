#!/usr/bin/env sh

set -euo pipefail
IFS=$'\n\t'

q_help() {
  echo "q-queue v0.1.0"
  echo "github.com/justincampbell/q-queue"
  echo ""
  echo "  Usage:"
  echo "    q [COMMAND]  Queue command to run at a later time in this directory"
  echo ""
}

if [ -z $@ ]; then
  q_help
  exit 1
fi

echo "$PWD $@" >> $HOME/.q
